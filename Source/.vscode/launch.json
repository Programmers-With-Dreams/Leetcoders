{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",       //启动项的名称
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "x64",
            "program": "${workspaceRoot}\\Debug\\${fileBasenameNoExtension}.exe", //运行文件的路径
            "args": [],                 //运行文件的参数，一般没有
            "stopAtEntry": false,       //是否在入口点处暂停
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,   //是否使用外部控制台窗口
            "internalConsoleOptions": "neverOpen",
            "MIMode": "gdb",
            "miDebuggerPath": "D:/TDM-GCC-64/bin/gdb64.exe",    //DEBUG程序的路径
            "setupCommands": [{
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": false
            }],
            "preLaunchTask": "Compile"  //运行前需要完成的任务
        }
    ]
}